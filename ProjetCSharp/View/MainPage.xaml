                        surname="salut"
                        name="basile"
                        email="lhdlq"
                        foto="csgo_hugs.png"/>
                </x:Array>
            </CollectionView.ItemsSource>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:StudentModel">
                    <HorizontalStackLayout Padding="10">
                        <Image
                            Aspect="AspectFill"
                            HeightRequest="100"
                            Source="{Binding foto}"
                            WidthRequest="100" />
                        <Label Text="{Binding id}" BackgroundColor="White"/>
                        <Label Text="{Binding surname}"/>
